---
import Icon from '@components/ui/Icon.astro';
import { getLocaleMessages } from '@i18n/index.ts';
import { HeartHandshake } from '@lucide/astro';
import type { ComponentProps } from 'astro/types';

/**
 * Props for rendering a sponsor-only feature icon component.
 *
 * Inherits all properties accepted by the base `Icon` component,
 * except for `icon`, which is fixed.
 */
type Props = Omit<ComponentProps<typeof Icon>, 'icon'>;

const msg = getLocaleMessages(Astro).icon.sponsorOnly.label;

const props = Astro.props;
---

<Icon icon={HeartHandshake} tooltip={msg} {...props} />

<style>
	svg {
		stroke: var(--p);
	}
</style>
