---
import type { WithChildren } from '@type/utils.ts';
import type { HTMLAttributes } from 'astro/types';

/**
 * Props for a visually hidden input element (used for checkbox/radio styling).
 */
type Props = WithChildren<false, HTMLAttributes<'input'>>;

const props = Astro.props;
---

<!-- Assume a loading state by default and re-enable after data has been loaded with JS -->
<input aria-busy="true" disabled {...props} />

<style>
	input {
		display: block;
		margin: 0;
		padding: 0;
		width: 0;
		height: 0;
		opacity: 0;
	}
</style>
