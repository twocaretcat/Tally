---
import type { HTMLAttributes } from 'astro/types';
import type { WithChildren } from '../../types.ts';
import Card from './Card.astro';

/**
 * Props for a styled input/output container with interactive label hover effects.
 */
type Props = WithChildren<true, HTMLAttributes<'div'>>;

const props = Astro.props;
---

<!-- This must be on the same line to prevent whitespace from being inserted -->
<Card {...props}><slot /></Card>

<style>
	div {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;

		&:hover {
			> label {
				transition-duration: var(--d-md);

				&:has(> input) {
					opacity: var(--o-md);
				}

				&:has(> input:hover) {
					opacity: 1;
					box-shadow: var(--s-box-md);
				}
			}
		}
	}
</style>
