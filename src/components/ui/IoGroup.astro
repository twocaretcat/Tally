---
import type { WithChildren } from '@type/utils.ts';
import type { ComponentProps } from 'astro/types';
import Card from './Card.astro';

/**
 * Props for a styled input/output container with interactive label hover effects.
 */
type Props = WithChildren<true, ComponentProps<typeof Card>>;

const props = Astro.props;
---

<!-- This must be on the same line to prevent whitespace from being inserted -->
<Card {...props}><slot /></Card>

<style>
	.card {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		background-color: var(--bg-1);

		&:hover {
			transition-duration: var(--d-md);

			> * {
				opacity: var(--o-md);

				&:hover {
					opacity: 1;
				}
			}
		}

		> * {
			flex-grow: 1;
		}
	}
</style>
