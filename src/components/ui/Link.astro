---
import type { ComponentProps } from 'astro/types';
import LinkWrapper from './LinkWrapper.astro';

/**
 * Props forwarded to the underlying `LinkWrapper` component.
 *
 * Slot content is rendered as the linkâ€™s children.
 */
type Props = ComponentProps<typeof LinkWrapper>;

const props: Props = Astro.props;
---

<!-- This must be on the same line to prevent whitespace from being inserted -->
<LinkWrapper {...props}><slot /></LinkWrapper>

<style>
	a:not(:has(picture, img, svg)) {
		padding-block-end: var(--b-md);
		color: var(--p);
		border-block-end: var(--b-md) solid var(--p);
	}
</style>
